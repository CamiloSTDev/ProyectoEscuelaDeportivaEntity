@model IEnumerable<Entity_Framework_Escuela_Deportiva.Models.Grupo>

@{
    ViewData["Title"] = "Index";
    Layout = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHorarioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHorarioNavigation.IdHorario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGrupo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdGrupo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGrupo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
