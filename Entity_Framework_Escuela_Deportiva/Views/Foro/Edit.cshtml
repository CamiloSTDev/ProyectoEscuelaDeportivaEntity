@model Entity_Framework_Escuela_Deportiva.Models.Foro

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="bg-white dark:bg-zinc-800 min-h-screen w-full">
        <header class="bg-blue-500 dark:bg-zinc-900 text-white dark:text-zinc-200 p-4">
            <h1 class="text-2xl font-bold">Editar Publicación</h1>
        </header>
        <main class="p-4">
            <form asp-action="Edit" method="post" class="space-y-4">
                <input type="hidden" asp-for="IdForo" />
                <div class="mb-4">
                    <label for="idPublicacion" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">ID Publicación</label>
                    <input asp-for="IdPublicacion"
                           id="idPublicacion"
                           placeholder="Ingrese el ID de la publicación"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <!-- Otros campos según sea necesario -->
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Guardar Cambios</button>
                </form>
            </main>
        </div>
    </body>
</html>