@model Entity_Framework_Escuela_Deportiva.Models.Foro

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="bg-white dark:bg-zinc-800 min-h-screen w-full">
        <header class="bg-blue-500 dark:bg-zinc-900 text-white dark:text-zinc-200 p-4">
            <h1 class="text-2xl font-bold">Crear Publicación</h1>
        </header>
        <main class="p-4">
            <form asp-action="Create" method="post" class="space-y-4">
                <div class="mb-4">
                    <label for="titulo" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Título</label>
                    <input asp-for="Titulo"
                           id="titulo"
                           placeholder="Ingrese el título de la publicación"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="contenido" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Contenido</label>
                    <textarea asp-for="Contenido"
                              id="contenido"
                              placeholder="Ingrese el contenido de la publicación"
                              class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500"></textarea>
                </div>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Crear</button>
            </form>
        </main>
        <footer class="bg-zinc-200 dark:bg-zinc-900 text-zinc-600 dark:text-zinc-400 p-4">
            <p>&copy; 2024 Next Gen Forum. Todos los derechos reservados.</p>
        </footer>
    </div>
</body>
</html>
