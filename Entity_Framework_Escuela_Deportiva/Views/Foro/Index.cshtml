@model IEnumerable<Entity_Framework_Escuela_Deportiva.Models.Foro>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            if (successMessage) {
                alert(successMessage);
            }

            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
    <style>
        #foroMain {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            max-height: calc(100vh - 100px); /* altura máxima del contenedor del foro */

            overflow-y: auto; /* desplazamiento vertical */
        }


            #foroMain main {
                flex: 1; /* ocupa el espacio restante */

                padding: 20px;
            }


            #foroMain footer {
                background-color: #f7f7f7;
                padding: 20px;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="bg-white dark:bg-zinc-800 min-h-screen" style="max-width: 1500px; margin: auto " id='foroMain'>
        <header class="bg-blue-500 dark:bg-zinc-900 text-white dark:text-zinc-200 p-4">
            <h1 class="text-2xl font-bold">Next Gen Forum</h1>
        </header>
        <main class="p-4">
            <a href="@Url.Action("Create")" class="bg-blue-500 text-white px-4 py-2 rounded-lg mb-4 inline-block">Crear Nueva Publicación</a>            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var foro in Model)
                {
                    <div class="bg-zinc-100 dark:bg-zinc-700 p-4 rounded-lg">
                        <h2 class="text-lg font-bold mb-2">@foro.Titulo</h2>
                        <p class="text-zinc-600 dark:text-zinc-300">@foro.Contenido</p>
                    </div>
                }
            </div>
        </main>
        <footer class="bg-zinc-200 dark:bg-zinc-900 text-zinc-600 dark:text-zinc-400 p-4">
            <p>&copy; 2024 Next Gen Forum. Todos los derechos reservados.</p>
        </footer>
    </div>
</body>
</html>
