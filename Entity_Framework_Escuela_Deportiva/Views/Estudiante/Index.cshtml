@model Entity_Framework_Escuela_Deportiva.Models.Estudiante

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            if (successMessage) {
                alert(successMessage);
            }

            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
</head>
<body>
    <div class="bg-white dark:bg-zinc-800 min-h-screen w-full">
        <header class="bg-blue-500 dark:bg-zinc-900 text-white dark:text-zinc-200 p-4">
            <h1 class="text-2xl font-bold">Profile Settings</h1>
        </header>
        <main class="p-4">
            <form asp-action="UpdateProfile" method="post" class="space-y-4">
                <input type="hidden" asp-for="IdUsuario" />
                <div class="mb-4">
                    <label for="nombres" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">First Name</label>
                    <input asp-for="Nombres"
                           id="nombres"
                           placeholder="Enter your first name"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="apellidos" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Last Name</label>
                    <input asp-for="Apellidos"
                           id="apellidos"
                           placeholder="Enter your last name"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="doc" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Document Number</label>
                    <input asp-for="Doc"
                           id="doc"
                           placeholder="Enter your document number"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="telefono" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Phone Number</label>
                    <input asp-for="Telefono"
                           id="telefono"
                           placeholder="Enter your phone number"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="fechaNac" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Date of Birth</label>
                    <input asp-for="FechaNac"
                           id="fechaNac"
                           placeholder="Enter your date of birth"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <label for="correo" class="block text-lg font-medium text-zinc-700 dark:text-zinc-300">Email</label>
                    <input asp-for="Correo"
                           id="correo"
                           placeholder="Enter your email"
                           class="w-full px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-700 focus:outline-none focus:ring focus:ring-blue-500 dark:focus:ring-zinc-500" />
                </div>
                <div class="mb-4">
                    <h2 class="text-lg font-bold mb-2">Total Attendances: @Model.AsisTotal</h2>
                </div>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Save Changes</button>
            </form>
            <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg">View Monthly Invoice</button>
        </main>
        <footer class="bg-zinc-200 dark:bg-zinc-900 text-zinc-600 dark:text-zinc-400 p-4">
            <p>&copy; 2024 Next Gen Forum. Todos los derechos reservados.</p>
        </footer>
    </div>
</body>
</html>
