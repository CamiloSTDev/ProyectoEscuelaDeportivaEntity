                        <br />
                        <input class="form-control mb-3" type="text" placeholder="Documento"  required asp-for="Doc" />
                        <br />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña"  required asp-for="Contraseña" />
                       <br />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        ¿No tienes una cuenta? <a asp-controller="Acceso" asp-action="Registrarse">Registrate Ya!</a>
                </form>       
          </div>
        </div>
      </div>
