
@model Estudiante;

<html>
    <head>
    <title>Peril</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>

        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header text-center">
                        Perfil
                    </div>
                    <div class="card-body">

                        <form asp-controller="Acceso" asp-action="Perfil" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombres"  />
                            @* <input class="form-control mb-3" type="text" placeholder="Apellidos"  /> *@
                            <input class="form-control mb-3" type="text" placeholder="No.Documento" />
                            @*<input class="form-control mb-3" type="tel" placeholder="Telefono"  />
                            <input class="form-control mb-3" type="email" placeholder="Correo" />
                            <input class="form-control mb-3" type="date" placeholder="Fecha de Nacimiento"  />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" />
                            <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña"  />*@
                      

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Modificar</button>
                                <button class="btn btn-primary" type="submit">Guardar</button>
                            </div>


                        </form>


                    </div>


                </div>
            </div>


        </div>




        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
