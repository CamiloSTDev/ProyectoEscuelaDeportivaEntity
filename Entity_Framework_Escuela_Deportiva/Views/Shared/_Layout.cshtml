<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Entity_Framework_Escuela_Deportiva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Entity_Framework_Escuela_Deportiva.styles.css" asp-append-version="true" />
    <style>
        .navbar-vertical {
            width: 100px;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
            height: 100%;
            background-color: #f5f5f5;
            border-right: 1px solid #ddd;
        }

            .navbar-vertical .nav-link {
                display: block;
                padding: 5px 0;
            }

                .navbar-vertical .nav-link:hover {
                    background-color: #ddd;
                }

     .main-content {
    padding-top: 60px; /* adjust this value to match the height of the navbar */
    padding-left: 15px;
    padding-right: 15px;
}

    .container-fluid.main-content {
    margin-left: 0;
    margin-right: 0;
}

    .container.main-content {
    padding-left: 15px;
    padding-right: 15px;
}
    .main-content.container{
            display: flex;
            flex-direction: column;
         
    }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-vertical bg-white border-bottom box-shadow mb-3">
            <div class="container body-content content main-content">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Next Gen</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-column">
                    <ul class="navbar-nav">
                        <li class="nav-item container position-relative" style="top: -400px; left: 10px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Entity_Framework_Escuela_Deportiva - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
