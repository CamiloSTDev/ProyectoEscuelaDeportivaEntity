<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Entity_Framework_Escuela_Deportiva</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Entity_Framework_Escuela_Deportiva.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    

</head>
<body>
    <header>
    <div class="flex h-screen">
            <nav class="bg-gray-800 tex6t-white w-[200px] h-full" style="background-color:#fff700">
            <div class="py-4 px-6">
                <a class="text-lg font-bold" href="#">
                    Next Gen
                </a>
            </div>
            <div class="mt-8">
                <ul class="space-y-4">
                    <li>
                            <a class="nav-link block px-4 py-2 rounded-md transition-colors" asp-area="" asp-controller="Home" asp-action="Index">
                            Inicio
                        </a>
                    </li>
                    <li>
                            <a class="nav-link block px-4 py-2 rounded-md transition-colors" asp-area="" asp-controller="Horario" asp-action="Index">
                            Horario
                        </a>
                    </li>
                    <li>
                            <a class="nav-link block px-4 py-2 rounded-md transition-colors" asp-area="" asp-controller="Asistencia" asp-action="Index" >
                            Asistencia
                        </a>
                    </li>
                    <li>
                            <a class="nav-link block px-4 py-2 rounded-md transition-colors" asp-area="" asp-controller="Foro" asp-action="Index">
                            Foro
                        </a>
                    </li>
                    <li>
                            <a class="nav-link block px-4 py-2 rounded-md transition-colors" asp-area="" asp-controller="Estudiante" asp-action="Index">
                            Configuración
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container flex-1 p-6">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
        </div>
    </div>
    </header>
    <style>
        
        .flex {
            display: flex;
            flex-wrap: wrap;
        }

        nav {
            width: 200px; /* ancho de la barra de navegación */

        }

        main {
            flex: 1; /* ocupa el espacio restante */
            padding: 20px; /* padding para separar el contenido de la barra de navegación */
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-4 {
            width: 33.33%; /* ancho de cada columna */
            padding: 20px; /* padding para separar las columnas */
        }
        body{
            background: #a5a5a5;
        }
        a:hover{
            background-color: #ece400;
        }
    </style>
    <div class="container">
        
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-right align-content-end">
            &copy; 2024 - Entity_Framework_Escuela_Deportiva - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
